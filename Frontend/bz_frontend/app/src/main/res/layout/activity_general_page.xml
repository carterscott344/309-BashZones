<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralPage"
    android:background="#272757"
    android:orientation="horizontal"
    >

    <android.widget.ImageButton
        android:id="@+id/profile_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/rounded_square"
        android:src="@drawable/baseline_emoji_people_24"
        />

    <android.widget.ImageButton
        android:id="@+id/settings_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_square"
        android:src="@drawable/baseline_settings_24"
        />


    <android.widget.ImageButton
        android:id="@+id/leaderboard_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="104dp"
        android:background="@drawable/rounded_square"
        android:src="@drawable/podium"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_square"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="12dp"
            >

            <android.widget.ImageButton
                android:id="@+id/shop_button"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/baseline_shopping_cart_24"
                android:background="#717171"
                android:layout_marginHorizontal="24dp"
                />

            <android.widget.ImageButton
                android:id="@+id/random_mm_button"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/baseline_question_mark_24"
                android:background="#717171"
                android:layout_marginHorizontal="24dp"
                />

            <android.widget.ImageButton
                android:id="@+id/party_mm_button"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/baseline_people_24"
                android:background="#717171"
                android:layout_marginHorizontal="24dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Random Match"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Party Match"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>