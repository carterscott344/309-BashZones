<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/inv_root_rl"
    android:padding="5dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_image_inv_window"
        android:src="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inv_window_text"
        android:text="Demo Item Name"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_below="@id/item_image_inv_window"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_buttons_ll"
        android:layout_below="@id/inv_window_text"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >

        <android.widget.Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/inv_back_button"
            android:text="Back"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="5dp"
            android:background="#000000"
            />

        <android.widget.Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/inv_equip_button"
            android:text="Equip"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginHorizontal="16dp"
            android:background="#2E6F40"
            android:layout_marginVertical="5dp"
            />

        <android.widget.Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/inv_sell_button"
            android:text="Sell"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginHorizontal="16dp"
            android:background="#950606"
            android:layout_marginVertical="5dp"
            />

    </LinearLayout>

</RelativeLayout>